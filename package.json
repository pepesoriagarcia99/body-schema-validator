{
  "name": "bodyschema",
  "version": "0.1.0",
  "private": true,
  "description": "Body parser middleware for MongoDB, Express and Nodejs",
  "author": "Jose Eduardo Soria <pepesoriagarcia99@gmail.com>",
  "license": "MIT",
  "files": [
    "src/"
  ],
  "keywords": [
    "body",
    "request",
    "mongo",
    "mongodb",
    "mongoose",
    "express",
    "node",
    "nodejs",
    "query",
    "middleware",
    "param"
  ],
  "main": "src/index.js",
  "scripts": {
    "dev": "nodemon -i \"*.test.js\" --exec babel-node src/index.js",
    "build": "babel src --out-dir dist --ignore src/**/*.test.js",
    "lint": "eslint src",
    "test": "mocha src/api/*/*.test.js --require @babel/register --exit",
    "coverage": "nyc --reporter=text npm test"
  },
  "devDependencies": {
    "@babel/cli": "~7.19.3",
    "@babel/core": "~7.19.6",
    "@babel/node": "~7.19.1",
    "@babel/plugin-transform-runtime": "~7.19.6",
    "@babel/preset-env": "~7.19.4",
    "@babel/register": "~7.18.9",
    "babel-eslint": "~10.1.0",
    "cross-env": "~7.0.3",
    "dotenv-safe": "~4.0.3",
    "eslint": "~8.26.0",
    "eslint-config-prettier": "~8.5.0",
    "nodemon": "~1.10.2",
    "prettier": "~2.7.1"
  },
  "dependencies": {
    "@babel/runtime": "~7.19.4"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js}": [
      "npm run lint",
      "git add"
    ]
  },
  "engines": {
    "npm": "8.19.2",
    "node": "18.12.0"
  }
}
